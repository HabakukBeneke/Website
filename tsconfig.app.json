{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "src/env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "test/**/**/*",
    "src/main.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@store/*": [
        "./src/store/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@interfaces/*": [
        "./src/interfaces/*"
      ],
      "@views/*": [
        "./src/views/*"
      ],
      "@helpers/*": [
        "./src/helpers/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
    }
  }
}